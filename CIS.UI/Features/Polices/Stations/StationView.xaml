<UserControl x:Class="CIS.UI.Features.Polices.Stations.StationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:addresses="clr-namespace:CIS.UI.Features.Commons.Addresses" 
             mc:Ignorable="d" d:DesignHeight="300" d:Dessign="300">
    <Grid >
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Station Configuration" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
                <mui:BBCodeBlock BBCode="Station defenitions and configuration." Margin="0,0,0,16"/>

                <StackPanel x:Name="Form" Orientation="Vertical" >
                    <StackPanel.Resources>
                        <ResourceDictionary Source="/Assets/Styles/FormInputMatrix.xaml" />
                    </StackPanel.Resources>

                    <StackPanel>
                        <Label Content="Logo" />
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Logo}" HorizontalAlignment="Center" MaxHeight="250" MaxWidth="250"/>
                            <mui:ModernButton Command="{Binding LookupLogo}" Style="{StaticResource app_bar_picture}" HorizontalAlignment="Center" Margin="4"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Name"/>
                        <TextBox Text="{Binding Name, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Location"/>
                        <TextBox Text="{Binding Location, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Clearance Validity"/>
                        <TextBox Text="{Binding ClearanceValidity, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <addresses:AddresssView DataContext="{Binding Address}"/>

                    <!-- buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                        <Button Content="Save" IsDefault="True" Command="{Binding Path=Save}" Margin="4" />
                        <Button Content="Refresh" IsCancel="True" Command="{Binding Path=Refresh}" Margin="4" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
