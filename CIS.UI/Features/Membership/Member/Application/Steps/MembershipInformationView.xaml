<UserControl x:Class="CIS.UI.Features.Membership.Member.Application.Steps.MembershipInformationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Margin="{StaticResource SplitLeft}">
            <StackPanel>
                <TextBlock Text="Member Information" Style="{StaticResource Heading2}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>
