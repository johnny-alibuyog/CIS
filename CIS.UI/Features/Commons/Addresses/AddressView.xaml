                SelectedValue="{Binding SelectedBarangay, Mode=TwoWay}"
                DisplayMemberPath="Name" 
                IsTextSearchCaseSensitive="False" 
                IsTextSearchEnabled="True" 
                StaysOpenOnEdit="True"
                IsEditable="True" />-->
