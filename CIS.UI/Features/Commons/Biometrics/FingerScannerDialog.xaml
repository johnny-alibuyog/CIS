<local:DialogBase  x:Class="CIS.UI.Features.Commons.Biometrics.FingerScannerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CIS.UI.Features"
        xmlns:biometrics="clr-namespace:CIS.UI.Features.Commons.Biometrics"
        local:DialogBase.DialogResult="{Binding Path=ActionResult}"
        Title="FingerScannerDialogView" SizeToContent="WidthAndHeight">
    <StackPanel Style="{StaticResource ContentRoot}">
        <biometrics:FingerScannerView DataContext="{Binding Camera}" Width="600" />

        <!-- buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ok" IsDefault="True" Command="{Binding Path=Accept}" Margin="4" />
            <Button Content="Cancel" IsCancel="True"  Margin="4" />
        </StackPanel>
    </StackPanel>
</local:DialogBase >
